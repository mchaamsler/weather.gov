{% if content.title %}
{{ attach_library("new_weather_theme/localize-timestamps") }}
<div class="grid-container"> 
  <div class="grid-row"> 
    <div class="grid-col tablet-lg:grid-offset-2 tablet-lg:grid-col-8">
      <div data-wx-weather-story class="margin-bottom-4">
        <h2 class="text-primary-darkest text-normal margin-top-0 margin-bottom-2"> {{  content.title | t }} </h2>
        <p class="text-base margin-top-2"><span class="font-family-mono text-ls-neg-3">{{ "Last updated" | t }}:</span>
        <time datetime="{{ content.updated.utc }}" data-wx-local-time data-date-format="M d Y T">
          {{ content.updated.formatted }}
        </time>
        </p>
        <div class="line-height-sans-4"> 
          {{ content.body | raw }}
        </div>
        <img class="margin-left-neg-2 tablet:margin-left-0 maxw-mobile-lg" src="/{{ base_path ~ directory }}/assets/r3/R3_WS_01.png" alt="Map of expected snowfall">
        {# TODO: Uncomment to re-enable dynamic images, hard coding an image for R3
        {% if content.image %}
        <img class="margin-left-neg-2 tablet:margin-left-0 maxw-mobile-lg" src="{{ file_url(content.image.uri) }}" alt="{{ content.image.alt | replace({'"': "&quot;"}) }}">
        {% endif %}
         #}
      </div>
    </div>
  </div>
</div> 

{% endif %}
